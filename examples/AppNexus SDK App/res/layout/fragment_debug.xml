<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="4dp"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                style="@style/header"
                android:text="@string/debug_title_request"
                />

        <TextView
                android:id="@+id/request_text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>

        <TextView
                style="@style/header"
                android:layout_marginTop="12dp"
                android:text="@string/debug_title_response"
                />

        <TextView
                android:id="@+id/response_text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>

        <Button
                android:layout_marginTop="12dp"
                android:id="@+id/btn_email_server"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/debug_btn_email_server"/>

        <LinearLayout
                style="@style/debugParent">

            <TextView
                    android:id="@+id/memberid_text"
                    android:text="@string/debug_txt_memberid"
                    style="@style/debugText"
                    />
            <EditText
                    android:id="@+id/memberid_edit"
                    style="@style/debugEdit"
                    android:text="@string/settings_hint_memberid"
                    />

        </LinearLayout>

        <LinearLayout
                style="@style/debugParent">
            <TextView
                    android:id="@+id/dongle_text"
                    android:text="@string/debug_txt_dongle"
                    style="@style/debugText"
                    />
            <EditText
                    android:id="@+id/dongle_edit"
                    android:text="@string/settings_hint_dongle"
                    style="@style/debugEdit"
                    />

        </LinearLayout>

        <LinearLayout
                style="@style/debugParent">
            <TextView
                    android:id="@+id/placementid_text"
                    android:text="@string/debug_txt_placementid"
                    style="@style/debugText"
                    />
            <EditText
                    android:id="@+id/placementid_edit"
                    android:hint="@string/settings_hint_placementid"
                    style="@style/debugEdit"
                    />

        </LinearLayout>

        <Button
                android:id="@+id/btn_run_debug"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/debug_btn_debugauction"/>

    </LinearLayout>

</ScrollView>