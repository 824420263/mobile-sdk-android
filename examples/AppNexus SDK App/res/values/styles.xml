<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="widthFillheightWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="header" parent="widthFillheightWrap">
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/header_bg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item" parent="widthFillheightWrap">
        <item name="android:padding">4dp</item>
    </style>

    <style name="switchButtonItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="switchItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:checked">false</item>
    </style>

    <style name="switchText" parent="widthFillheightWrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">8dp</item>
        <!--<item name="android:gravity">center</item>-->
    </style>

    <style name="settingsTextItem">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="settingsTextItem.long">
        <item name="android:layout_width">160dp</item>
    </style>

    <style name="settingsEditItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">16</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="spinnerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="settingsSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="debugParent" parent="widthFillheightWrap">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="debugText" parent="widthFillheightWrap">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="debugEdit" parent="widthFillheightWrap">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:editable">false</item>
    </style>

</resources>