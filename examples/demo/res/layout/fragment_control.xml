<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opensdk="http://schemas.android.com/apk/res/com.example.opensdkdemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- Banner -->
    <com.appnexus.opensdk.BannerAdView
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        opensdk:width="320"
        opensdk:height="50"
        opensdk:placement_id="1281482"
        />
    
    <!-- Buttons -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="Banner"
            />
        
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="Interstitial"
            />
        
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="MRAID"
            />
        
    </LinearLayout>
    
    <!-- Size Selector, Refresh Rate Selector -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            
            android:text="Size: " />
        
        <Spinner 
            android:id="@+id/size_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            
            android:text="Refresh rate: " />
        
        <Spinner 
            android:id="@+id/refresh_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <!-- Placement ID -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            
            android:text="Placement ID: " />
        
        <EditText 
            android:inputType="number"
            android:maxLines="1"
            android:minWidth="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        
    </LinearLayout>
    
    <!-- Load Ad Button -->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:text="Load Ad" />

</LinearLayout>